{
  "name": "dockit",
  "private": true,
  "version": "0.0.0",
  "main": "dist/src/electron/main.js",
  "description": "A faster, better and more stable NoSQL desktop tools",
  "author": "geekfun <support@geekfun.club>",
  "scripts": {
    "vite:start": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "start": "tsc && cross-env APP_ENV=dev DEBUG=dockit concurrently vite \" electron .\" \"tsc -w\"",
    "build": "npm run vite:build && tsc",
    "package": "npm run vite:build && tsc && electron-builder",
    "test": "jest --runInBand --coverage --coverageReporters json-summary text html lcov",
    "test:ci": "jest --runInBand --ci --coverage --coverageReporters json-summary text html lcov",
    "preview": "vite preview",
    "lint:fix": "eslint --fix ./",
    "lint:check": "eslint ./",
    "prepare": "husky install"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "electron-store": "^8.1.0",
    "monaco-editor": "^0.45.0",
    "pinia": "^2.1.7",
    "vue": "^3.3.12",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vicons/antd": "^0.12.0",
    "@vicons/carbon": "^0.12.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-assembler": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "naive-ui": "^2.35.0",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}-${version}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
