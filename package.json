{
  "name": "dockit",
  "private": true,
  "version": "0.0.0",
  "main": "dist/src/electron/main.js",
  "description": "A faster, better and more stable NoSQL desktop tools",
  "scripts": {
    "vite:start": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "start": "tsc && cross-env APP_ENV=dev concurrently vite \" electron .\" \"tsc -w\"",
    "package": "npm run vite:build && tsc && electron-builder",
    "test": "jest --runInBand --coverage --coverageReporters json-summary text html lcov",
    "test:ci": "jest --runInBand --ci --coverage --coverageReporters json-summary text html lcov",
    "preview": "vite preview",
    "lint:fix": "eslint --fix ./",
    "lint:check": "eslint ./"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/node": "^20.4.4",
    "@types/jest": "^29.5.3",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "electron-devtools-assembler": "^1.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vue-tsc": "^1.8.6"
  },
  "directories": {
    "test": "tests"
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}-${version}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "apk",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pacman",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "freebsd",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
